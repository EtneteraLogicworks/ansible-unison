[Unit]
Description=Unison synchronizuje {{ sync_item.root1 }} s {{ sync_item.root2 }}
Documentation=man:unison
Wants=networking.service
After=multi-user.target networking.service

[Service]
Type=simple
Restart=on-failure
RestartSec=1
ExecStart={{ unison.installpath }} {{ sync_item.name }} -repeat {{ sync_item.interval | default(60) }}
User=root

[Install]
WantedBy=multi-user.target
